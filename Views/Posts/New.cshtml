@model Micro_social_app.Models.Post

<h2 class="text-center mt-5">Adaugare postare</h2>
<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <form method="post"
                  asp-controller="Posts"
                  asp-action="New"
                  enctype="multipart/form-data">

                @Html.AntiForgeryToken()

                @if (ViewBag.Message != null)
                {
                    <div class="alert @ViewBag.Alert text-center">
                        @ViewBag.Message
                    </div>
                }

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- CONTINUT -->
                <div class="mb-3">
                    <label class="form-label">Continut postare</label>
                    <textarea asp-for="Content"
                              class="form-control"
                              rows="4"
                              placeholder="Scrie ceva..."></textarea>
                </div>

                <!-- IMAGINE -->
                <div class="mb-3">
                    <label class="form-label">Imagine (optional)</label>
                    <input type="file"
                           name="ImageFile"
                           class="form-control"
                           accept="image/*" />
                </div>

                <!-- VIDEO -->
                <div class="mb-3">
                    <label class="form-label">Video (optional)</label>
                    <input type="file"
                           name="VideoFile"
                           class="form-control"
                           accept="video/*" />
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        Adauga postare
                    </button>

                    <a class="btn btn-secondary ms-2"
                       asp-controller="Posts"
                       asp-action="Index">
                        Inapoi
                    </a>
                </div>

            </form>

        </div>
    </div>
</div>


