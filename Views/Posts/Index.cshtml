@model List<Micro_social_app.Models.Post>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">

            @foreach (var post in Model)
            {
                string fullName =
                post.User?.Profile?.FullName
                ?? post.User?.UserName
                ?? "User";

                string profileImg = post.User?.Profile?.ProfileImageUrl ?? "";
                string initial = !string.IsNullOrEmpty(fullName)
                ? fullName.Substring(0, 1).ToUpper()
                : "U";

                int commentsCount = post.Comments?.Count ?? 0;
                int reactionsCount = post.Reactions?.Count ?? 0;

                <div class="card mb-4 shadow-sm">

                    <!-- HEADER -->
                    <div class="card-header bg-white d-flex align-items-center gap-2">

                        <a asp-controller="Profiles"
                           asp-action="Index"
                           asp-route-userId="@post.UserId"
                           class="text-decoration-none">

                            @if (!string.IsNullOrEmpty(profileImg))
                            {
                                <img src="@profileImg"
                                     class="rounded-circle"
                                     style="width:40px;height:40px;object-fit:cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary text-white d-flex
                                                    align-items-center justify-content-center"
                                     style="width:40px;height:40px;">
                                    @initial
                                </div>
                            }
                        </a>

                        <div>
                            <a asp-controller="Profiles"
                               asp-action="Index"
                               asp-route-userId="@post.UserId"
                               class="fw-bold text-dark text-decoration-none">
                                @fullName
                            </a>

                            <div class="text-muted" style="font-size:0.8rem;">
                                @post.CreatedAt.ToLocalTime().ToString("dd MMM yyyy, HH:mm")
                            </div>
                        </div>

                    </div>

                    <!-- MEDIA -->
                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                    {
                        <img src="@post.ImageUrl" class="w-100" />
                    }
                    else if (!string.IsNullOrEmpty(post.VideoUrl))
                    {
                        <video class="w-100" controls>
                            <source src="@post.VideoUrl" />
                        </video>
                    }

                    <!-- BODY -->
                    <div class="card-body">

                        <!-- ACTION BAR -->
                        <div class="ig-actions-row">
                            <button type="button" class="ig-icon-btn" title="Like">
                                <i class="bi bi-heart"></i>
                            </button>

                            <a asp-controller="Posts"
                               asp-action="Show"
                               asp-route-id="@post.Id"
                               class="ig-icon-btn ig-icon-link"
                               title="Comment">
                                <i class="bi bi-chat"></i>
                            </a>

                            <button type="button"
                                    class="ig-icon-btn ms-auto"
                                    title="Share">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>

                        <!-- LIKES -->
                        <div class="ig-likes">
                            @reactionsCount likes
                        </div>

                        <!-- CAPTION -->
                        @if (!string.IsNullOrEmpty(post.Content))
                        {
                            <div class="ig-caption">
                                <span class="ig-caption-user"><b>@fullName</b></span>
                                <span class="ig-caption-text">@post.Content</span>
                            </div>
                        }

                    <!-- COMMENTS LINK -->
                    <a asp-controller="Posts"
                       asp-action="Show"
                       asp-route-id="@post.Id"
                       class="ig-view-comments">
                        @(commentsCount > 0
                                                ? $"View all {commentsCount} comments"
                                                : "Add a comment…")
                    </a>

                    </div>

                </div>
                        }

        </div>
    </div>
</div>



























